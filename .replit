modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Master-Fees App"

[[workflows.workflow]]
name = "Master-Fees App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Master-Fees && npm run dev"
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 80

[agent]
integrations = ["flask_supabase==1.0.0"]
